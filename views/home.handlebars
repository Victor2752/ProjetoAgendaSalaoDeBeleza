<div class="container">
    <div class="containerTituloGrande">
        <h1 class="tituloGrande">Agendar Serviço</h1>
    </div>

    <form action="/visualizar" method="POST" class="containerAdicionarAgendamento">
        <div class="containerLinhaAgendamento">
            <div class="containerColunaAgendamento1">
                <div class="containerInputAgendamento">
                    <label for="inputFuncao">Selecione o Funcionario:</label>
                    <select class="select" name="selectFuncionario" required>
                        <option value="0">Nome do Funcionario</option>
                        <!--comando do handlebars: para cada serviço dentro do banco, crie um option
                        com o value sendo o id e com o conteúdo sendo o nome do serviço-->
                        {{#each funcionarios}}
                        <option value="{{dataValues.funcao}}">{{{dataValues.nome}}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
            <div class="containerColunaAgendamento2">
                <div class="containerInputAgendamento">
                    <label for="inputServico">Data do serviço:</label>
                    <input type="date" class="inputData" name="inputData" required>
                </div>
            </div>
        </div>
        <div class="containerLinhaAgendamento">
            <button type="submit" class="btn btnAgendamento">Visualizar</a>
        </div>
    </form>

    <div class="containerTituloGrande">
        <h2 class="tituloPequeno">{{dataValues.funcionario}} - {{dataValues.data}}</h2>
    </div>

</div>